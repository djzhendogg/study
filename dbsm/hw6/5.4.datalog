StudentsMarksByCourse(StudentId, CourseId) :-
    Marks(StudentId, CourseId, _).

StudentsWithoutAnyMarksFromLecturer(StudentId, GroupId) :-
    Students(StudentId, GroupId, _),
	Plan(GroupId, CourseId, LecturerId),
	¬StudentsMarksByCourse(StudentId, CourseId),
	Lecturers(LecturerId, LecturerName),
	LecturerName = :LecturerName.
	
StudentsWithAllMarksFromLecturer(StudentId) :-
    Students(StudentId, GroupId, _),
	¬StudentsWithoutAnyMarksFromLecturer(StudentId, GroupId).